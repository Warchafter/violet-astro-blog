<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .bg-grid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: 50px 50px;
    background-image: 
      linear-gradient(to right, rgba(6, 182, 212, 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(6, 182, 212, 0.05) 1px, transparent 1px);
    z-index: -1;
    pointer-events: none;
  }

  .bg-glow {
    position: fixed;
    width: 60vw;
    height: 60vw;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, rgba(6, 182, 212, 0.05) 50%, transparent 70%);
    filter: blur(60px);
    z-index: -1;
    pointer-events: none;
  }

  .bg-glow.top-right {
    top: -20%;
    right: -20%;
  }

  .bg-glow.bottom-left {
    bottom: -20%;
    left: -20%;
  }

  /* Sparkling lights styles */
  .sparkling-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .sparkle {
    position: absolute;
    background: radial-gradient(circle, rgba(6, 182, 212, 1) 0%, rgba(139, 69, 19, 0.8) 20%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
    animation: twinkle 3s ease-in-out infinite;
  }

  .corner-sparkle {
    width: 8px;
    height: 8px;
    box-shadow: 
      0 0 10px rgba(6, 182, 212, 0.8),
      0 0 20px rgba(6, 182, 212, 0.6),
      0 0 30px rgba(6, 182, 212, 0.4);
    animation-duration: 2s;
  }

  .grid-sparkle {
    width: 4px;
    height: 4px;
    box-shadow: 
      0 0 6px rgba(6, 182, 212, 0.7),
      0 0 12px rgba(6, 182, 212, 0.5);
    animation-duration: 4s;
  }

  /* Add different animation delays to create asynchronous twinkling */
  @for (let i = 1; i <= 30; i++) {
    .sparkle:nth-child({i}) {
      animation-delay: calc(random() * 2s);
    }
  }

  @keyframes twinkle {
    0% {
      opacity: 0.3;
      transform: scale(0.8);
    }
    25% {
      opacity: 0.8;
      transform: scale(1.1);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
    75% {
      opacity: 0.6;
      transform: scale(1);
    }
    100% {
      opacity: 0.3;
      transform: scale(0.8);
    }
  }

  /* Additional sparkle effect for corners */
  .corner-sparkle::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 2px;
    height: 12px;
    background: linear-gradient(to bottom, transparent, rgba(6, 182, 212, 0.8), transparent);
    transform: translate(-50%, -50%);
    animation: sparkleBeam 3s ease-in-out infinite;
  }

  .corner-sparkle::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 12px;
    height: 2px;
    background: linear-gradient(to right, transparent, rgba(6, 182, 212, 0.8), transparent);
    transform: translate(-50%, -50%);
    animation: sparkleBeam 3s ease-in-out infinite;
  }

  @keyframes sparkleBeam {
    0%, 100% {
      opacity: 0.2;
      transform: translate(-50%, -50%) scale(0.5);
    }
    50% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1.2);
    }
  }
</style>
