---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

import {
  Navbar,
  ProfileStatsCard,
  ProfileSocials,
  ProfileStatus,
  ProfileAboutMe,
  ProfileLatestProjects,
  ProfileWorkExperience,
  QuoteCard
} from '~/components';

---

<Layout>
  <div class="flex flex-col mx-auto max-w-7xl gap-8 py-8">
    <Navbar />
    <div
      class="grid grid-cols-7 grid-rows-auto text-slate-50 gap-10 items-start"
    >
      <div class="grid col-span-2 gap-8">
        <ProfileStatsCard />
        <ProfileSocials />
        <ProfileStatus />
        <QuoteCard />
      </div>
      <div class="grid col-span-5 col-start-3 gap-8">
        <ProfileAboutMe />
        <ProfileLatestProjects />
        <ProfileWorkExperience />
      </div>
    </div>
  </div>
</Layout>
