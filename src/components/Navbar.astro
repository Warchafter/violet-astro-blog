---
type NavLink = {
  label: string,
  href: string,
  isSearch?: boolean
}
// The [] indicates this is an array of NavLink objects
// Without [], navLinks would just be a single NavLink object
// We need an array because we want to store multiple navigation links
// that we can map over to generate the navigation menu items
const navLinks: NavLink[] = [
  { label: "Blog", href: "/blog" },
  { label: "Projects", href: "/projects" }, 
  { label: "Search", href: "#", isSearch: true },
];
---

<nav class="px-2">
  <div class="flex justify-between items-center text-stone-50">
    <div class="text-xl font-bold">
      <a href="/" class="hover:text-purple-500">Kevin Arriaga</a>
    </div>
    <div>
      <ul class="flex space-x-6 font-medium">
        {
          navLinks.map((link, index) => (
            <li>
              <a href={link.href} class="hover:bg-purple-600">
                {link.label}
              </a>
              {index !== navLinks.length - 1 && <span class="ml-4">/</span>}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
